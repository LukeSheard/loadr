{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "lib": ["es2019"],
    "target": "es2019",
    "skipLibCheck": true,
    "esModuleInterop": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "module": "esnext",
    "checkJs": true,
    "noEmit": true,
  },
  "include": [
    "bin.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
